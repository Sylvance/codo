<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Type</th>
      <th>View code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.user.id %></td>
        <td><%= video.title %></td>
        <td><%= video.video_type %></td>
        <td><%= video.view_code %></td>
        <td><%= link_to 'Show', [@user, video] %></td>
        <td><%= link_to 'Edit', [:edit, @user, video] %></td>
        <td><%= link_to 'Destroy', [@user, video], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

